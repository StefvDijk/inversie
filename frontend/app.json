{
  "expo": {
    "name": "Inversie",
    "slug": "inversie",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "inversie",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F4F0E6"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.inversie.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Inversie needs camera access for document scanning and money request photos.",
        "NSPhotoLibraryUsageDescription": "Inversie needs photo library access to select images for money requests.",
        "NSFaceIDUsageDescription": "Inversie uses Face ID for secure authentication."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F4F0E6"
      },
      "package": "com.inversie.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-local-authentication",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Inversie to access your camera for document scanning."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Inversie to access your photos for money requests."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#d6453a"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "apiUrl": "http://localhost:3000/api"
    }
  }
}
